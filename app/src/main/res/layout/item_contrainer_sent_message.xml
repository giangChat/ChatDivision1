<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:id="@+id/itemSent"
    >

    <TextView
        android:id="@+id/textMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_sent_message_single"
        android:padding="18sp"
        android:fontFamily="@font/lato"
        android:textColor="@color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvDateTimeSent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:layout_marginTop="1sp"
        android:textColor="@color/gray_cancel_search_message"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMessageSent" />

</androidx.constraintlayout.widget.ConstraintLayout>