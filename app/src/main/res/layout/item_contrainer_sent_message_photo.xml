<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:id="@+id/itemSentPhoto"
    >

    <ImageView
        android:id="@+id/imgMessageSentPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/emoji0"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvDateTimeSentPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:layout_marginTop="1sp"
        android:textColor="@color/gray_cancel_search_message"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMessageSentPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>